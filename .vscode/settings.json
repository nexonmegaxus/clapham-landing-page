{
    // For Tailwind CSS IntelliSense
    "files.associations": {
        "*.css": "tailwindcss"
    },
    "editor.quickSuggestions": {
        "strings": true
    },

    // For Tailwind CSS IntelliSense on app.config.ts
    "tailwindCSS.experimental.classRegex": [
        ["ui:\\s*{([^)]*)\\s*}", "[\"'`]([^\"'`]*).*?[\"'`]"],
        ["/\\*\\s?ui\\s?\\*/\\s*{([^;]*)}", ":\\s*[\"'`]([^\"'`]*).*?[\"'`]"]
    ],

    // To enable enable IntelliSense when using the ui prop
    "tailwindCSS.classAttributes": ["class", "className", "ngClass", "ui"]
}
